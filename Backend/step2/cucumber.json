{
    "default": {
        "publishQuiet": true,
        "paths": ["features/"],
        "require": [
            "features/step_definitions/*.ts",
            "features/support/hooks.ts"
        ],
        "requireModule": ["ts-node/register"]
    },
    "critical": {
        "publishQuiet": true,
        "paths": ["features/"],
        "require": [
            "features/step_definitions/*.ts",
            "features/support/hooks.ts"
        ],
        "requireModule": ["ts-node/register"],
        "tags": "@critical"
    }
}
